FROM nginx:alpine

# Remove default nginx configuration
RUN rm /etc/nginx/conf.d/*

# Remove default nginx static assets
RUN rm -rf /usr/share/nginx/html/*

COPY ./django-code/staticfiles/admin/ /usr/share/nginx/html/admin
COPY ./django-code/staticfiles/e_commerce/ /usr/share/nginx/html/e_commerce
COPY ./django-code/nginx/nginx.conf /etc/nginx/conf.d/default.conf

CMD ["nginx", "-g", "daemon off;"]
